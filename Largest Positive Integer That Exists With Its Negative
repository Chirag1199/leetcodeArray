class Solution {
    public int findMaxK(int[] nums) {

        //  1. sorted array: 
        
        Arrays.sort(nums);

        int smallest = 0;

        // 2. Retrieve the smallest value from sorted array and check if it exists in an array or not:
        
        for(int i = 0; i < nums.length; i++){
                smallest = Math.min(smallest, nums[i]);
                if(smallest == -nums[i]){
                    smallest = nums[i];
                    return smallest;
                }
        }

        return -1;
    }
}
